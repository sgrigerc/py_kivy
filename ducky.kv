<Container>:
    rows: 3
    label_text: label_text
    k_0: k_0
    k_1: k_1
    k_2: k_2
    k_3: k_3
    k_4: k_4
    k_5: k_5
    k_6: k_6
    k_7: k_7
    k_8: k_8
    k_9: k_9
    k_t: k_t
    k_ac: k_ac
    k_y: k_y
    k_d: k_d
    k_m: k_m
    k_p: k_p

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'

        size_hint: 1, 0.15
        padding: 15

        Label:
            text: '0'
            id: label_text
            halign: 'left'
            valign: 'center'
            size_hint: (1, 1.6)
            font_size: '55sp'
            multiline: False
            on_realese:
                # self.text = "Новый текст"
                root.update_label()


    GridLayout:
        cols: 4

        BoxLayout:
            orientation: 'vertical'
            padding: [0,14,0,0]

            Button:
                text: '7'
                on_press: root.add_number
                id: k_7

            Button:
                text:'4'
                on_press: root.add_number
                id: k_4

            Button:
                text:'1'
                on_press: root.add_number
                id: k_1

            Button:
                text:'0'
                on_press: root.add_number
                id: k_0


        BoxLayout:
            orientation: 'vertical'
            padding: [0,14,0,0]

            Button:
                text: '8'
                on_press: root.add_number
                id: k_8

            Button:
                text:'5'
                on_press: root.add_number
                id: k_5

            Button:
                text:'2'
                on_press: root.add_number
                id: k_2

            Button:
                text:'.'
                on_press: root.add_operation
                id: k_t

        BoxLayout:
            orientation: 'vertical'
            padding: [0,14,0,0]

            Button:
                text:'9'
                on_press: root.add_number
                id: k_9

            Button:
                text:'6'
                on_press: root.add_number
                id: k_6

            Button:
                text:'3'
                on_press: root.add_number
                id: k_3

            Button:
                text:'AC'
                id: k_ac

        BoxLayout:
            orientation: 'vertical'
            padding: [0,14,0,0]

            Button:
                text:'*'
                id: k_y
                on_press: root.add_operation

            Button:
                text:'/'
                id: k_d
                on_press: root.add_operation

            Button:
                text:'-'
                id: k_m
                on_press: root.add_operation

            Button:
                text:'+'
                id: k_p
                on_press: root.add_operation

    BoxLayout:
        size_hint: 0.9, 0.15


        MDRaisedButton:
            text: 'Go'
            size_hint: 1, 1